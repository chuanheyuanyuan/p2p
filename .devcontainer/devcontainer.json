{
  "name": "p2p-lending-vibe",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",
  "features": {
    "ghcr.io/devcontainers/features/docker-from-docker:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    }
  },
  "postCreateCommand": "pip install --user uv && uv pip install --system ruff black pytest httpx || true",
  "remoteEnv": {
    "PYTHONDONTWRITEBYTECODE": "1",
    "PIP_DISABLE_PIP_VERSION_CHECK": "1"
  },
  "forwardPorts": [8000, 8001, 8002, 8003, 8004, 8005, 8006, 8007, 8008, 8009, 8010, 8011, 8012, 8013],
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "editor.formatOnSave": true,
        "files.trimTrailingWhitespace": true,
        "terminal.integrated.shellIntegration.enabled": true,
        "httpyac.environmentVariables": {
          "local": {
            "host": "http://localhost:8000"
          }
        },
        "task.allowAutomaticTasks": "on"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker",
        "ms-vscode.makefile-tools",
        "humao.rest-client",
        "charliermarsh.ruff",
        "tamasfe.even-better-toml",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "mounts": [
    "source=${localWorkspaceFolder}/.venv,target=/workspace/.venv,type=bind,consistency=cached"
  ],
  "runArgs": ["--init"],
  "containerUser": "vscode"
}
